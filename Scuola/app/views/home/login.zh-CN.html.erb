<script type="text/javascript">
	var view = "home/login"
</script>
<div class="container">
	<header class="page-header">
		<h1>Login</h1>
	</header>
	<div class="row"  id="home_login_box">
		<div class="col-md-6 animated"  id="home_u_login_box">
		<%=form_for @user_base , :url=>login_verify_path  , :html =>{:class=>"form-horizontal animated" ,remote:true , "data-type" => :json ,method: "post" , id:"form_home_login",role:"form"} do |f| %>
			<fieldset>
				<div id="err_b">
				<% unless @errors.blank? %>
					<div class="alert alert-block alert-danger fade in" id="home_alert_error">
						<a class="close" data-dismiss="alert" href="#">×</a>
						<h3>出错啦！</h3>
						<ul>
						<% for e in @errors %>
							<li><%=e%></li>
						<% end %>
						</ul>
					</div>
				<%end%>
				</div>
				<div class="form-group">
					<%= f.label :email , "Email" , :class=>"col-md-offset-2 control-label col-md-2" , :for=>"user_base_email" %>
					<div class="col-md-6">
						<%= f.text_field :email , :class=>"form-control" %>
					</div>
				</div>
				<div class="form-group">
					<%= f.label :password , "Password" , :class=>"col-md-offset-2 control-label col-md-2" , :for=>"user_base_password" %>
					<div class="col-md-6">
						<%= f.password_field :password , :class=>"form-control" %>
					</div>
				</div>
				<div class="form-group">
		            <div class="col-md-offset-4 col-md-6">
		              <label class="checkbox">
		                <input type="checkbox" id="rememberMe">
		                记住密码（请勿在公共计算机上使用）
		              </label>
		            </div>
		          </div>
				<div class="form-actions">
				<div class="form-group">
					<div class="col-md-offset-4 col-md-6">
					<%= f.submit "Login" ,:class=>"btn btn-primary btn-lg" %>
					</div>
					</div>
				</div>
			</fieldset>
		<% end %>
		</div>
		<div class="col-md-offset-2 col-md-4 home_login_box animated home_left_border" id="home_tp_login_box">
			<div class="col-md-offset-2 col-md-8">
			<h4>第三方登陆</h4>
			<ul class="nav nav-pills nav-stacked">
				<li><%=oauth_link '使用 Google 登陆','google' , 'login'%></li>
				<li><%=oauth_link '使用 腾讯微博 登陆','qq', 'login'%></li>
				<li><%=oauth_link '使用 新浪微博 登陆','sina', 'login'%></li>
				<li><%=oauth_link '使用 天翼账号 登陆','surfing', 'login'%></li>
			</ul>
			</div>
		</div>
	</div>
</div>